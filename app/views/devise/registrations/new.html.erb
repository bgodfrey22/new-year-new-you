<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <br/>
  <h3>Your Information</h3>
  <div class="row">
    <div class="col-sm-6 form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "form-control" %>
    </div>
    <div class="col-sm-6 form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <strong>Upload a Profile Pic:</strong>
    <%= f.file_field :avatar %>
  </div>

  <h3>Password Confirmation</h3>
  <div class="row">
    <div class="col-sm-6 form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>    
    </div>
    <div class="col-sm-6 form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>