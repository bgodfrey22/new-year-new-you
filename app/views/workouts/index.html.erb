<h1>All Workouts</h1>

<div class="row">
    <% @workouts.each do |workout| %>
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading"><%= workout.label %></div>
                <div class="panel-body">
                    <% workout.exercises.each do |exercise| %>
                        <p><%= exercise.name %></p>
                    <% end %>
                </div>
                <div class="panel-footer">
                    <%= link_to 'View Workout', show_workout_path(id: workout.id) %>
                </div>
            </div> <!-- Panel class -->
        </div> <!-- Col-sm-4 -->
    <% end %>
</div> <!-- row -->

<%= link_to 'Create New Workout', new_workout_path, class: 'btn btn-default' %>
