<h1>All Workouts</h1>

<div class="row">
    <% @workouts.each do |workout| %>
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading"><%= workout.label %></div>
                <div class="panel-body">
                    <p>
                        <%= @exercise_id %>
                    </p>
                </div>
                <div class="panel-footer">
                        <%= link_to 'View Workout', workout %>
                </div>
            </div> <!-- Panel class -->
        </div> <!-- Col-sm-4 -->
    <% end %>
</div> <!-- row -->

<%= link_to 'New Workout', new_workout_path %>
