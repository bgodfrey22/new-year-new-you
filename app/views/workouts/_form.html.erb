<%= form_for @workout do |f| %>
  <% if workout.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(workout.errors.count, "error") %> prohibited this exercise from being saved:</h2>

    <ul>
    <% workout.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <p>Workout Name:</p>
    <%= f.text_field :label, class: 'form-control' %>
  </div>

  <div class="form-group">
    <p>Choose Exercises:</p>
    <div id="exercises_workout">
    <%= f.fields_for :exercises_workouts do |exercise| %>
      <%= render 'exercises_workout_fields', f: exercise %>
      <% end %>
      <div class="links">
          <%= link_to_add_association 'add exercises_workout', f, :exercises_workouts %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
