<div class="workouts container-fluid">
<p id="notice"><%= notice %></p>

<h1><%= @workout.label %> Exercises</h1>

<div class="row">
    <% @workout.exercises.each do |exercise| %>
        <div class="col-sm-6">
            <div class="panel">
                <div class="panel-heading">
                    <%= exercise.name %>
                </div>
                <div class="panel-body">
                    <%= exercise.muscle_group %>
                    <%= image_tag exercise.image, class: "img-responsive" %>
                </div>
            </div>
        </div>
    <% end %>
</div>


<%= link_to 'Edit Workout', edit_workout_path(@workout), class: 'btn', id: 'edit-workout-link' %>
<%= link_to 'Delete Workout', @workout, method: :delete, data: { confirm: 'Are you sure you want to delete this workout?' }, 
                                        class: 'btn', id: 'delete-workout-link' %>
<%= link_to 'All Workouts', workouts_path, class: 'btn', id: 'all-workouts-link' %>
</div>