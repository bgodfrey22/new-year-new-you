<div class="workouts">
    <div class="container-fluid">

    <h1> Exercises for: <%= @workout.label %></h1>

    <div style="margin:1% 0;">
        <%= link_to edit_workout_path(@workout), class: 'btn', id: 'edit-workout-link' do %>
            <i class="fa fa-pencil" aria-hidden="true"></i> Edit
        <% end %>
        <%= link_to @workout, method: :delete, data: { confirm: 'Are you sure you want to delete this workout?' }, 
            class: 'btn', id: 'delete-workout-link' do %>
            <i class="fa fa-times" aria-hidden="true"></i> Delete
        <% end %>
        <%= link_to workouts_path, class: 'btn', id: 'all-workouts-link' do %>
            <i class="fa fa-star" aria-hidden="true"></i> All Workouts
        <% end %>
    </div>

    <div class="row container-fluid">
        <% @workout.exercises.each do |exercise| %>
                <div class="panel exercise-panel">
                    <div class="panel-heading">
                        <%= exercise.name %>
                    </div>
                    <div class="panel-body">
                        <ul>
                            <li><%= image_tag exercise.image, class: "img-responsive" %></li>
                            <li><strong>MUSCLE GROUP:</strong> <%= exercise.muscle_group %> </li>
                            <li><strong>TYPE: </strong> <%= exercise.equipment_type %></li>
                            <li><strong>DESCRIPTION: </strong><br/>
                                <%= exercise.description %></li>
                        </ul>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    </div>
</div>