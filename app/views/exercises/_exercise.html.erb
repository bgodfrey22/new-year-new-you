<tr>
    <td><%= exercise.name %></td>
    <td><%= exercise.muscle_group %></td>
    <td><%= exercise.equipment_type %></td>
    <td><a data-toggle="modal" data-target="#showExerciseModal">Show </a></td>
    <td><%= link_to edit_exercise_path(exercise), remote: true do %>
                                                  <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                                                  <% end %></td>
    <td><%= link_to exercise, remote: true,
                              method: :delete, 
                              data: { confirm: 'Are you sure you want to permanently delete this exercise?' } do%>
                              <i class="fa fa-times" aria-hidden="true"></i> Delete
                              <% end %></td>
</tr>

<!-- Show Exercise Modal -->
<div class="modal fade exercise-modal" id="showExerciseModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong><%= exercise.name %></strong>
      </div>
      <div class="modal-body connect-icons">
        <ul>
          <li><%= image_tag exercise.image, class: "img-responsive" %></li>
          <li><strong>MUSCLE GROUP: </strong><%= exercise.muscle_group %></li>
          <li><strong>EQUIPMENT TYPE: </strong><%= exercise.equipment_type %></li>
          <li><strong>DESCRIPTION: </strong><%= exercise.description %></li>
          <li><button type="button" class="btn btn-default" data-dismiss="modal">Close</button></li>
        </ul>
      </div>
    </div>
  </div>
</div>
