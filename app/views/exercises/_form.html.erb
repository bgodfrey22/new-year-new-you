<%= form_with(model: @exercise, remote: true) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :exercise_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :muscle_group %> </br>
    <%= form.select :muscle_group, options_for_select(Exercise::MUSCLE_GROUP), { include_blank: true }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :equipment_type %>
    <%= form.select :equipment_type, options_for_select(Exercise::EQUIPMENT_TYPE), { include_blank: true }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <% if @exercise.id? %>
  <div class='form-group'>
    <%= form.button 'Update Exercise', class: 'btn btn-submit' %>
  </div>
  <% else %>
  <div class='form-group'>
    <%= form.button 'Create Exercise', class: 'btn btn-submit' %>
  </div>
  <% end %>

<% end %>